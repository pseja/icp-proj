<automaton name="TimeoutOnly">
    <comment>Automaton where all transitions are only timeouts (path - graph theory)</comment>
    <variables>
        <variable name="timeout1" type="int" value="1000"/>
        <variable name="timeout2" type="int" value="2000"/>
        <variable name="timeout3" type="int" value="3000"/>
        <variable name="timeout4" type="int" value="4000"/>
    </variables>
    <states>
        <state name="FIRST" initial="true" />
        <state name="SECOND" />
        <state name="THIRD" />
        <state name="FOURTH" />
        <state name="FIFTH" />
    </states>
    <transitions>
        <transition from="FIRST" to="SECOND">
            <delay>timeout1</delay>
        </transition>
        <transition from="SECOND" to="THIRD">
            <delay>timeout2</delay>
        </transition>
        <transition from="THIRD" to="FOURTH">
            <delay>timeout3</delay>
        </transition>
        <transition from="FOURTH" to="FIFTH">
            <delay>timeout4</delay>
        </transition>
    </transitions>
</automaton>